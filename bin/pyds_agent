#! /usr/bin/env python
# *-* coding: utf8 *-*

import httplib
import json
import sys
import socket
import time

if len(sys.argv) == 1:
    exit(1)

tag = sys.argv[1]
server = sys.argv[2]

while True:
    try:
        ip = socket.gethostbyname(socket.gethostname())
        data = json.dumps({tag: ip})
        h = httplib.HTTPConnection(server)
        headers = {'Content-type': 'application/json'}
        h.request('POST', '/', data, headers)
        r = h.getresponse()
        if r.status == 200:
            print ip
        time.sleep(5)
    except socket.error:
        pass