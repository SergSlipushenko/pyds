#! /usr/bin/env python
# *-* coding: utf8 *-*

import httplib
import json
import time
from email.utils import parsedate
import random
import getopt
import sys

DISCOVERY = 'discover'
PREFIX = '7ebb8929'
SCHEMA = 'https://'
SERVER = 'dweet.io'
POST_URL = '/dweet/for/'
GET_URL = '/get/latest/dweet/for/'
TTL = 5*60


def get_thing(cluster):
    if cluster:
        return '-'.join((DISCOVERY, PREFIX, cluster))
    else:
        return '-'.join((DISCOVERY, PREFIX))


def get_dweet(thing):
    while True:
        c = httplib.HTTPConnection(SERVER)
        c.request('GET', GET_URL + thing, headers={'Content-type': 'application/json'})
        r = c.getresponse()
        if r.status < 300:
            body = json.loads(r.read())
            ts = int(time.mktime(parsedate(r.getheader('date'))))
            if body['this'] == 'succeeded':
                content = body['with'][0]['content']
                return content, ts
            elif body.get('with') == 404:
                return {}, ts
        time.sleep(1)


def print_catalog(cluster):
    thing = get_thing(cluster)
    catalog, current_ts = get_dweet(thing)
    sorted_catalog = sorted(catalog.items(), key=lambda item: item[1], reverse=True)
    for name, ts in sorted_catalog:
        print '%s: %s' % (name, current_ts - ts)


if __name__ == "__main__":
    try:
        opts, args = getopt.getopt(sys.argv[1:], "c:")
    except getopt.GetoptError as err:
        print str(err)
        sys.exit(2)

    cluster = None
    for opt, val in opts:
        if opt == '-c':
            cluster = val

    print 'Get catalog from %s' % (SCHEMA + SERVER + GET_URL + get_thing(cluster))
    print_catalog(cluster)
